    <% @users.each do |user| %>
      <tr scope="row">
        <td><%= user.name %></td>
        <td> <a href="mailto:<%= user.email %>" > <%= user.email %>  </a> </td>
        <td><%= user.interests %></td>
        <td><%= user.major %></td>
        <td><%= user.gradyear %></td>
        <td>

        <form action="/followers" method="post">

        <input style="display:none" type="text" name="otheruser" id="otheruser" value='<%= user.name %>'>
        <input class="user" style="display:none" type="text" name="thisuser" id="thisuser" value=''>


          <input value="Follow" type="submit"></input>
        </form>
        
        </td>
      </tr>
    <% end %>
  </tbody>
</table>




<script>


var table = document.getElementById("mytab1");
for (var i = 0, row; row = table.rows[i]; i++) {
   for (var j = 0, col; col = row.cells[j]; j++) {
     t=col.innerText;
     if(t=="Rasvik"){
	row.remove();
     }
   }  
}


var table = document.getElementById("mytab1");
for (var i = 0, row; row = table.rows[i]; i++) {
   for (var j = 0, col; col = row.cells[j]; j++) {
     t=col.innerText;
     if(t==currentuser){
	      row.children[5].remove();
     }
   }  
}


query = window.location.search;

//Get search terms from URL
urlParams = new URLSearchParams(query);
searchterm=urlParams.get('term');

if(searchterm == null){
  searchterm=""
}

//Remove all search rows that do not contain the given search term
var allRows = $('.table tbody tr');
        allRows.each(function(){
            if( ! $(this).is(':contains("'+searchterm+'")'))  {
                $(this).css({"display":"none"});
            }
        });

</script>