<%# The form for users to sign up to create an account if they do not already have one. %>
<h1>Sign Up</h1>
<%= form_for(:user, url: users_path) do |f|%>
  <%= f.label :username%><br>
  <%= f.text_field :username%><br>
  <%= f.label :password%><br>
  <%= f.text_field :password%><br>
  <%= f.label :name%><br>
  <%= f.text_field :name%><br>
  <%= f.label :email%><br>
  <%= f.text_field :email%><br>
  <%= f.label :interests%><br>
  <%= f.text_field :interests%><br>
  <%= f.label :major%><br>
  <%= f.text_field :major%><br>
  <%= f.label :gradyear%><br>
  <%= f.text_field :gradyear%><br>


  <%= f.submit %>
<%end%>







