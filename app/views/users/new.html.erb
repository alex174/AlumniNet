<%# The form for users to sign up to create an account if they do not already have one. %>
<h1>Sign Up</h1>
<%= form_for(:user, url: users_path) do |f|%>
  <%= f.label :username%>
  <%= f.text_field :username%>
  <%= f.label :password%>
  <%= f.text_field :password%>
  <%= f.label :name%>
  <%= f.text_field :name%>
  <%= f.label :email%>
  <%= f.text_field :email%>
  <%= f.label :interests%>
  <%= f.text_field :interests%>
  <%= f.label :major%>
  <%= f.text_field :major%>
  <%= f.label :gradyear%>
  <%= f.text_field :gradyear%>
  <br>
  <br>


  <%= f.submit %>
<%end%>







