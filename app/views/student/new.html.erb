<h1>Student Info</h1>
<%= form_with url: "/", model: @student, local: true, method: :post do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  <%= f.label :email %>
  <%= f.text_field :email, class: 'form-control' %>
  <%= f.label :interests %>
  <%= f.text_field :interests, class: 'form-control' %>
  <%= f.label :school %>
  <%= f.text_field :school, class: 'form-control' %>
  <%= f.label :major %>
  <%= f.text_field :major, class: 'form-control' %>
  <%= f.submit "Submit Form" %>

<% end %>