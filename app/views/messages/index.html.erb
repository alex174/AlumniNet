<% @messages.each do |message| %>
 <% if message.content %>
  <% user = User.find(message.user_id) %>
  <%= user.email %><%= message.message_time %>
  <%= message.content %>
 <% end %>
<% end %>
<%= form_for [@conversation, @message] do |f| %>
 <%= f.rich_text_area :content %>
 <%= f.text_field :user_id, value: current_user.id, type: "hidden" %>
 <%= f.submit "Send Reply" %>
<% end %>